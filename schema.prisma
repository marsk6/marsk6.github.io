datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id                    String      @id @default(cuid())
  slug                  String      @unique @default("")
  title                 String      @default("default title")
  tags                  Tag[]       @relation("Post_tags")
  category              Category?   @relation("Post_category", fields: [categoryId], references: [id])
  categoryId            String?     @map("category")
  attachment            UploadPost? @relation("Post_attachment", fields: [attachmentId], references: [id])
  attachmentId          String?     @unique @map("attachment")
  ctime                 Float?      @default(0)
  date                  String      @default("")
  readingTime           String      @default("")
  prevArticle           Post?       @relation("Post_prevArticle", fields: [prevArticleId], references: [id])
  prevArticleId         String?     @map("prevArticle")
  nextArticle           Post?       @relation("Post_nextArticle", fields: [nextArticleId], references: [id])
  nextArticleId         String?     @map("nextArticle")
  brief                 String      @default("")
  content               String      @default("")
  from_Post_prevArticle Post[]      @relation("Post_prevArticle")
  from_Post_nextArticle Post[]      @relation("Post_nextArticle")

  @@index([categoryId])
  @@index([prevArticleId])
  @@index([nextArticleId])
}

model Tag {
  id    String @id @default(cuid())
  name  String @default("")
  posts Post[] @relation("Post_tags")
}

model Category {
  id    String @id @default(cuid())
  name  String @default("")
  posts Post[] @relation("Post_category")
}

model UploadPost {
  id                  String  @id @default(cuid())
  isLive              Boolean @default(false)
  uploadTime          String  @default("default time")
  attachment_filesize Int?
  attachment_filename String?
  preview             String?
  post                Post?   @relation("Post_attachment")
}
